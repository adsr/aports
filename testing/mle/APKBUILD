# Contributor: Adam Saponara <as@php.net>
# Maintainer:
pkgname=mle
pkgver=1.4.3
pkgrel=0
pkgdesc="Flexible terminal-based text editor"
url="https://github.com/adsr/mle"
arch="all"
license="Apache-2.0"
makedepends="uthash-dev termbox-dev lua5.3-dev pcre-dev"
checkdepends="grep"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/adsr/$pkgname/archive/v$pkgver.tar.gz"

prepare() {
	default_prepare
	sed -i 's/-llua5.3/-llua/g' Makefile
}

build() {
	export CFLAGS="-I/usr/include/lua5.3"
	export LDFLAGS="-L/usr/lib/lua5.3"
	make
}

check() {
	make test
}

package() {
	make DESTDIR="$pkgdir" prefix=/usr install
        install -d "$pkgdir/usr/share/man/man1"
	install -m644 mle.1 "$pkgdir"/usr/share/man/man1/
}

syntax() {
	pkgdesc="Syntax highlighting definitions for $pkgname"

	mkdir -p "$subpkgdir"/usr/share/$pkgname/
	mv "$pkgdir"/usr/share/$pkgname/*.nanorc \
		"$subpkgdir"/usr/share/$pkgname/
}
sha512sums="014a8834a088f410a9ef5cd213140f1e4386726bd277f5fdffdfff8165cd1460ede54d5cb62a26bdef804391a524d398a439977b8f82add3d365936a3c5505ab  mle-1.4.3.tar.gz"
